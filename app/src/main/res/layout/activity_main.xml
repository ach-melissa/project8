<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A0404"
    android:padding="50dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:contentDescription="Profile Picture"
        app:srcCompat="@drawable/mely"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/matricule_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Matricule"
        android:backgroundTint="#B19CD9"
        android:textColorHint="#B19CD9"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/nom_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nom"
        android:backgroundTint="#B19CD9"
        android:textColorHint="#B19CD9"
        app:layout_constraintTop_toBottomOf="@id/matricule_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/prenom_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Prenom"
        android:backgroundTint="#B19CD9"
        android:textColorHint="#B19CD9"
        app:layout_constraintTop_toBottomOf="@id/nom_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/ajouter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter"
        android:backgroundTint="#B19CD9"
        app:layout_constraintTop_toBottomOf="@id/prenom_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/charcher_button"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:text="chercher"
        android:backgroundTint="#B19CD9"
        app:layout_constraintTop_toBottomOf="@id/ajouter_button"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/supprimer_button"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:text="Supprimer"
        android:backgroundTint="#B19CD9"
        app:layout_constraintTop_toBottomOf="@id/ajouter_button"
        app:layout_constraintStart_toEndOf="@id/charcher_button"
        android:layout_marginTop="16dp"
        android:layout_marginStart="10dp" />

    <Button
        android:id="@+id/modifier_button"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:text="Modifier"
        android:backgroundTint="#B19CD9"
        app:layout_constraintTop_toBottomOf="@id/charcher_button"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/afficher_button"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:text="afficher"
        android:backgroundTint="#B19CD9"
        app:layout_constraintTop_toBottomOf="@id/charcher_button"
        app:layout_constraintStart_toEndOf="@id/modifier_button"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
